.topBar {
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 0px;
  left: 0;
  z-index: 1000;
  background-color: red;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.topBar .logo {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
}
.topBar .logo image {
  vertical-align: middle;
  margin: 8rpx 0rpx 4rpx 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.topBar .logo text {
  display: inline-block;
  font-size: 34rpx;
  font-weight: bold;
  margin-left: 26rpx;
  color: white;
  line-height: 28rpx;
}
.topBar .search {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  width: 120rpx;
  height: 50rpx;
  background: white;
  border-radius: 20rpx;
  position: relative;
}
.topBar .search ._span {
  position: absolute;
  left: 0px;
  top: 0rpx;
  font-size: 42rpx;
}
.topBar .search text {
  margin-left: 40rpx;
}
.topBar .btnGroup {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
}

