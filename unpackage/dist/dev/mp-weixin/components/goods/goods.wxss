.goodsContainer {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.goodsContainer .goodList {
  width: 100%;
  height: auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.goodsContainer .goodList .goodItem {
  width: 49%;
  margin-top: 30rpx;
}
.goodsContainer .goodList .goodItem image {
  width: 100%;
}
.goodsContainer .goodList .goodItem .goodTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsContainer .goodList .goodItem .price {
  color: #ff5d12;
  margin-top: 20rpx;
}

