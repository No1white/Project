.goodDetailContainer {
  width: 100%;
  height: 100%;
}
.goodDetailContainer .goodList {
  padding: 20rpx;
}
.goodDetailContainer .goodList .goodItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 10rpx;
}
.goodDetailContainer .goodList .goodImg {
  width: 220rpx;
}
.goodDetailContainer .goodList .goodInfo {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
}
.goodDetailContainer .goodList .goodInfo .goodTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodDetailContainer .goodList .goodInfo .goodUnit {
  margin-top: 20rpx;
}
.goodDetailContainer .goodList .priceAndNum {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 30rpx;
  text-align: right;
}
.goodDetailContainer .goodList .priceAndNum .price {
  display: block;
}

