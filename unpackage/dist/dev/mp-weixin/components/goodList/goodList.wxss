.goodsContainer {
  width: 100%;
  height: 100%;
}
.goodsContainer .goodsWrap {
  width: 95%;
}
.goodsContainer .goodsWrap .goodList .goodItem {
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.goodsContainer .goodsWrap .goodList .goodItem image {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
}
.goodsContainer .goodsWrap .goodList .goodItem .goodInfo {
  padding: 16rpx;
  -webkit-box-flex: 4;
  -webkit-flex: 4;
          flex: 4;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.goodsContainer .goodsWrap .goodList .goodItem .goodInfo .goodTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsContainer .goodsWrap .goodList .goodItem .goodInfo .goodLine .price {
  color: #ff1043;
}
.goodsContainer .goodsWrap .goodList .goodItem .goodInfo .goodLine .sales {
  color: #999999;
  font-size: 30rpx;
  margin-left: 40rpx;
}

