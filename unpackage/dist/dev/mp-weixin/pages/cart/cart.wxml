<view class="shopContainer"><view class="shop"><block wx:for="{{cartGoods}}" wx:for-item="shop" wx:for-index="shopIndex"><view class="shopItem"><view class="shopInfo"><image src="{{shop.shopThumbnail}}" mode="widthFix"></image><text class="shopTitle">{{shop.shopTitle}}</text></view><view class="goods"><block wx:for="{{shop.cartGoods}}" wx:for-item="good" wx:for-index="goodIndex" wx:key="id"><view class="goodItem"><label class="checkBtn"><checkbox value="cb" checked="{{good.checked}}" data-event-opts="{{[['tap',[['cChecked',[shopIndex,goodIndex]]]]]}}" bindtap="__e"></checkbox></label><view class="goodInfo"><image src="{{good.picUrl}}" mode="widthFix"></image><view class="goodDetail"><text class="goodTitle">{{good.goodTitle}}</text><view class="goodCategory">{{''+good.categoryType+" "+good.category+''}}</view><view class="goodSize">{{''+good.sizeUnit+": "+good.size.unit+''}}</view><view class="total"><view class="price">{{'$'+good.size.price+''}}</view><view class="operation"><view class="delBtn" type="default" data-event-opts="{{[['tap',[['decrement',[shopIndex,goodIndex]]]]]}}" bindtap="__e">-</view><text class="goodNum">{{good.num}}</text><view class="addBtn" type="default" data-event-opts="{{[['tap',[['increment',[shopIndex,goodIndex]]]]]}}" bindtap="__e">+</view></view></view></view></view></view></block></view></view></block></view><view class="footer"><view class="allCheckWrap"><checkbox class="allCheck" value="cb" checked="{{checkAll}}" data-event-opts="{{[['tap',[['allCheked',['$event']]]]]}}" bindtap="__e"></checkbox>全选</view><view class="totalPrice">合计:<text class="price">{{"$"+countPrice}}</text></view><button class="settleAcount" type="default" data-event-opts="{{[['tap',[['goToPay',['$event']]]]]}}" bindtap="__e">结算</button></view></view>