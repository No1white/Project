<view class="container"><block wx:for="{{getDefaultAddress}}" wx:for-item="address" wx:for-index="__i0__"><block wx:if="{{address!=null}}"><view class="addressInfo"><view class="addressIcon"><label class="iconfont icon-dizhi1 _span"></label></view><view class="userInfo"><text class="userName">林先生</text><text class="userPhone">123456789789</text><text class="detailAddress">福建省漳州市平和完成的萨达多</text></view><view class="nextIcon"><label class="iconfont icon-jiantou1 _span"></label></view></view></block></block><block wx:if="{{address==null}}"><view class="noneAddress"><text>还没有添加地址</text><button class="goTo" type="default" data-event-opts="{{[['tap',[['goTo',['../addAddress/addAddress']]]]]}}" bindtap="__e">添加地址</button></view></block><block wx:for="{{filterGoods}}" wx:for-item="shop" wx:for-index="__i1__"><view class="goodWrap"><view class="shopLine"><image class="shopIcon" src="{{shop.shopThumbnail}}"></image><text class="shopName">{{shop.shopTitle}}</text></view><block wx:for="{{shop.cartGoods}}" wx:for-item="good" wx:for-index="__i2__"><view class="goodInfo"><image class="goodImg" src="{{good.picUrl}}" mode="widthFix"></image><view class="goodInfo"><text class="goodTitle">{{''+good.goodTitle+''}}</text><block wx:if="{{good.category==null}}"><text class="goodCategory">{{good.categoryType+" "+good.category}}</text></block><text class="goodSize">{{good.sizeUnit+" "+good.size.unit}}</text></view><view class="goodPriceWrap"><text class="goodPrice">{{"$"+good.goodPrice}}</text><text class="goodNum">{{"x"+good.num}}</text></view></view></block><view class="delivery"><text class="deliveryWay">配送方式</text><text class="way">普通配送</text><view class="deliveryPrice">快递包邮<label class="iconfont icon-jiantou1 _span"></label></view></view><view class="orderNote"><text class="note">订单备注</text><input type="text" placeholder="选填"/></view></view></block><view class="bottomPay"><view class="totalInfo"><text class="goodCount">{{"共计"+getGoodsNum+"件"}}</text><text class="totalPrice">{{"合计："+getGoodTotalPrice}}</text></view><button class="submit" type="default" data-event-opts="{{[['tap',[['payMoney',['$event']]]]]}}" bindtap="__e">提交订单</button></view></view>