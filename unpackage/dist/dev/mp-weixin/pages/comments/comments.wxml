<view class="commentContainer"><view class="topBar"><block wx:for="{{topBarList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['cTopBar',[index]]]]]}}" class="{{[item.checked==true?'active':'']}}" bindtap="__e">{{''+item.title+''}}</view></block></view><view class="commentList"><block wx:for="{{filterComments}}" wx:for-item="comment" wx:for-index="__i0__" wx:key="userName"><view class="commentItem"><view class="userInfo"><image class="avatar" src="{{comment.avatar}}" mode="widthFix"></image><text class="userTitle">{{comment.userName}}</text></view><view class="timeAndGoodInfo"><text class="time">{{comment.Time}}</text><text class="goodInfo">{{comment.buyInfo.categoryType+" "+comment.buyInfo.category}}</text><text class="goodInfo">{{''+comment.buyInfo.goodUnit+" "+comment.buyInfo.size}}</text></view><view class="comment"><text class="content">{{comment.content}}</text><view class="imageWrap"><block wx:for="{{comment.picUrls}}" wx:for-item="pic" wx:for-index="__i1__" wx:key="*this"><image src="{{pic}}" mode="widthFix"></image></block></view></view><block wx:if="{{comment.addReview}}"><view class="addReview">{{'追评：'+comment.addReview+''}}</view></block><view class="watchTimes">浏览：3232</view></view></block></view></view>